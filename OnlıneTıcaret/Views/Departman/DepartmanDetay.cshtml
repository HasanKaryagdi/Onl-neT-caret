@using OnlıneTıcaret.Models.Sınıflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<center><h2>DEPARTMAN DETAY SAYFASI</h2></center>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.d</li>
</ol>
<br />
<table class="table table-hover">
    <tr>
        <th>PERSONEL ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>GÖRSEL</th>
        <th>SATIŞLAR</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Personelid</td>
            <td>@x.PersonelAd</td>
            <td>@x.PersonelSoyad</td>
            <td>@x.PersonelGorsel</td>
            <td><a href="/Departman/DepartmanPersonelSatis/@x.Personelid" class="btn btn-info">Satışlar</a></td>
        </tr>
    }
    <tr>
        <td>1</td>
        <td>Ali</td>
        <td>Dokuz</td>
        <td>Deneme</td>
        <td><a href="#" class="btn btn-info">Satışlar</a></td>

    </tr>
</table>

